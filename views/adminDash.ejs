<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #121212; /* Dark background */
            color: #ffffff; /* White text */
            margin: 0;
            padding: 0;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 30px;
            background-color: #1e1e1e; /* Slightly lighter dark for contrast */
            border-bottom: 1px solid #333;
        }

        header h1 {
            font-size: 24px;
            margin: 0;
        }

        header a {
            text-decoration: none;
            color: #ffffff;
            background-color: #007bff;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        header a:hover {
            background-color: #0056b3;
        }

        .container {
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
            background-color: #1e1e1e; /* Same as header for cohesion */
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
        }

        .vehicle-list h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 20px;
        }

        .vehicle-card {
            background-color: #292929;
            margin-bottom: 15px;
            padding: 15px;
            border-radius: 5px;
            display: flex;
            align-items: center;
            transition: transform 0.2s ease;
        }

        .vehicle-card:hover {
            transform: scale(1.02);
        }

        .vehicle-card img {
            width: 100px;
            height: 75px;
            margin-right: 15px;
            object-fit: cover;
            border-radius: 8px;
        }

        .vehicle-card div {
            flex-grow: 1;
        }

        .vehicle-card h3 {
            margin: 0;
            font-size: 18px;
        }

        .vehicle-card p {
            margin: 0;
            font-size: 14px;
            color: #bbbbbb;
        }

        .vehicle-card button {
            background-color: #dc3545;
            border: none;
            color: #ffffff;
            padding: 8px 12px;
            margin:0px 3px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .vehicle-card button:hover {
            background-color: #b02a37;
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome, <%= user.name %></h1>
        <a href="/admin/add-vehicle">+ Add Vehicle</a>
    </header>
    <div class="container">
        <div class="vehicle-list">
            <h2>Your Vehicles (<%= vehicles.length %>)</h2>
            <% if (vehicles.length > 0) { %>
                <% vehicles.forEach(vehicle => { %>
                    <div class="vehicle-card">
                        <img src="/admin/vehicle-image/<%= vehicle.v_id %>" alt="Vehicle Image">
                        <div>
                            <h3><%= vehicle.v_name %></h3>
                            <p>Type: <%= vehicle.v_type %></p>
                            <p>Model: <%= vehicle.model_year %></p>
                            <p>Rent Price: $<%= vehicle.price %>/day</p>
                            <p>Availability: <b><%= vehicle.availability %></b></p>
                        </div>
                        <button onclick="deleteVehicle('<%= vehicle.v_id %>')">Delete</button>
                        <button onclick="editvehicle('<%= vehicle.v_id %>')">
                            Edit
                        </button>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No vehicles found. Add some!</p>
            <% } %>
        </div>
    </div>
    <script>

         function editvehicle(vid){
            console.log("clicked");
            location.href=`/admin/update-vehicle/${vid}`
            //const res = await fetch(`/admin/update-vehicle/${vid}`,{method:'get'})

        }
        // JavaScript function to handle delete
        function deleteVehicle(vehicleId) {
            if (confirm('Are you sure you want to delete this vehicle?')) {
                fetch(`/admin/delete-vehicle/${vehicleId}`, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Vehicle deleted successfully!');
                            location.reload(); // Refresh the page
                        } else {
                            location.reload()
                            // alert('Failed to delete vehicle');
                        }
                    })
                    .catch(error => console.error('Error:', error));
            }
        }
    </script>
</body>
</html>
